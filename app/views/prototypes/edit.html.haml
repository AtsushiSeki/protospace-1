= form_for @prototype, html: { class: "container proto-new" } do |f|
  - if @prototype.errors.any?
    #error_explanation.alert.alert-danger
      %ul.image-upload
        - @prototype.errors.full_messages.each do |message|
          %li
            = message

  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, placeholder: "Title", class: "proto-new-title"
    .row
      .col-md-12
        = f.fields_for :prototype_images, (@prototype.prototype_images.main) do |main_image|
          .cover-image-upload.main_image_preview{style: "background-image: url(#{@prototype.prototype_images.main.first.image});" "width: 100%"}
            = main_image.file_field :image
            = main_image.hidden_field :status, value: PrototypeImage.statuses[:main]
      .col-md-12
        %ul.proto-sub-list.list-group
          = f.fields_for :prototype_images, @prototype.prototype_images.sub do |sub_image|
            %li.list-group-item.col-md-4
              .image-upload.sub_image_preview1{style: "background-image: url(#{@prototype.prototype_images.sub.first.image});"}
                = sub_image.file_field :image
                = sub_image.hidden_field :status, value: PrototypeImage.statuses[:sub]

    .row.proto-description
      .col-md-12
        = f.text_field :catch_copy, placeholder: "Catch Copy"
      .col-md-12
        = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4"
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            %input{ placeholder: "Web Design", type: "text" }
          .col-md-3
            %input{ placeholder: "UI", type: "text" }
          .col-md-3
            %input{ placeholder: "Application", type: "text" }
    .row.text-center.proto-btn
      %button.btn.btn-lg.btn-primary.btn-block{ type: "submit" } Publish
