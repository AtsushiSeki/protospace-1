.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to image_tag('/images/newreg.png',  date: { holder: { redered: true }}, date: { src: "holder.js/64x64" }, alt: "64x64", src: "data:image/svg+xml;base64,", style: "width: 64px; height: 64px;"), user_path(@prototype.user)
        .media-body
          %h4#top-aligned-media.media-heading
          .proto-user
            = link_to "@prototype.user.name", user_path(@prototype.user)
            %span.degree
            = @prototype.user.member
            = @prototype.user.work

    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag(@prototype.prototype_images.main.first.image, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.prototype_images.sub.each do |prototype_image|
          %li.list-group-item
            = image_tag(prototype_image.image, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p= @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p= @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          = link_to "iPad", "#", class: "btn btn-default"
        %li
          = link_to "wireframe", "#", class: "btn btn-default"
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num= "(#{@comments.count})"
    = render partial: "comments"
