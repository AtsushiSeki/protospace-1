.container
  %form.form-signin
  = form_for(@user) do |f|
    %h2.form-signin-heading Please sign in
    %label.sr-only{:for => "inputEmail"} Email address
    %input#inputEmail.form-control
      = f.text_field :email, placeholder: "Email address", required: true, type: "email"
    %label.sr-only{:for => "inputPassword"} Password
    %input#inputPassword.form-control
      = f.text_field :email, placeholder: "Email address", required: true, type: "password"
      .checkbox
        = f.label :checkbox
        = f.check_box  value: remenber-me
        Remember me
= f.submit "Sign in", class: ".btn.btn-lg.btn-primary.btn-block"
.text-center
%p
  Not a member?
= link_to 'Sign up now', user_new
