.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt:  "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")
.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{ role: "presentation" }
          = link_to 'Popular PROTO', "#"
        %li{ role: "presentation" }
          = link_to 'Newest PROTO'
      %button.btn.btn-default.col-lg-1{ type: "button" } View Tags
.container.proto-list
  .row
    - @prototypes.each do |proto|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          - proto.prototype_images.each do |image|
            = link_to image_tag(image), prototype_path(proto.id)
          .caption
            %h3
              = proto.title
            .proto-meta
              .proto-user
                = link_to "#{ proto.user.name }", user_path(proto.user_id)
              .proto-posted
                Apr 26
            %ul.proto-tag-list.list-inline
              %li
                = link_to 'iPad' "proto.tag.id", class: "btn btn-default"
              %li
                = link_to 'wireframe' "proto.tag.id", class: "btn btn-default"
.text-center
  %ul.pagination
    %li.disabled
      %a{ "aria-label" => "Previous", href: "#" }
        %span{"aria-hidden" =>  "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      %a{ href: "#" } 2
    %li
      %a{ href: "#" } 3
    %li
      %a{ href: "#" } 4
    %li
      %a{ href: "#" } 5
    %li
      %a{ "aria-label" => "Next", href: "#"}
        %span{ "aria-hidden" => "true" } »
